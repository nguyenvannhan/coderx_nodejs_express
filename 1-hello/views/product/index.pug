extends ../layouts/common.pug 

block content 
    h1 Products 

    .d-flex.align-items-center.flex-wrap
        each product in products
            .col-12.col-lg-3
                .card
                    img.card-img-top.img-fluid(src=`${product.image}`, alt=`${product.name}`)
                    .card-body
                        h5.card-title= product.name
                        p.card-text Some quick example text to build on the card title and make up the bulk of the card&apos;s content.
                        a.btn.btn-primary(href='#') Go somewhere

